gem "just-the-docs", "0.4.0.rc3" # currently the latest pre-release
# gem "just-the-docs"            # the latest release - currently 0.3.3

callouts_level: quiet # or loud
callouts:
  highlight:
    color: yellow
  important:
    title: Important
    color: blue
  new:
    title: New
    color: green
  note:
    title: Note
    color: purple
  warning:
    title: Warning
    color: red

